# Deshabilitar listado de directorios
Options -Indexes

# Proteger archivos sensibles
<FilesMatch "^(database\.php|auth\.php|\.htaccess|\.gitignore)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Proteger archivos de configuraci√≥n
<FilesMatch "\.(ini|log|sql|bak|config)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>